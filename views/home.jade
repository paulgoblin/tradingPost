doctype html
html(lang="en")
  include ./includes/head.jade
  link(href="css/home.css" rel="stylesheet")
  body
    .container
      include ./includes/navbar.jade
      h1 Home

      .jumbotron
        h2= user.username
        .row
          .form.form-group
            input.form-control#url(type='text' placeholder='Add image url' value="http://www.wpclipart.com/tools/hand_tools/wrench/adjustable/adjustable_wrench_lg.png")
            input.form-control#name(type='text' placeholder='Item name' value="wrench")
            input.form-control#description(type='text' placeholder='Description' value="big")
            button.btn#addItem Add
          .col-xs-12.tableDiv
            table.table
              thead
                tr
                  th Image
                  th Name
                  th Description
                  th For trade
                  th Delete
                  th Offers
              tbody.itemsTable
                if items 
                  each item in items
                    tr.item(data-id= item._id.toString())
                      td.imgUrl
                        img(src= item.imgUrl)
                      td.name= item.name
                      td.description= item.description
                      td.trade
                        input(checked= item.forTrade type='checkbox')
                      td
                        i.fa.fa-trash-o.del
                      td.offers
                        if item.offers[0]
                          i.fa.fa-envelope-o.fa-2.showOffers(data-toggle="modal" data-target="#myModal")


                tr.item#sample
                  td.imgUrl
                    img
                  td.name 
                  td.description 
                  td.trade
                    input(type='checkbox')
                  td
                    i.fa.fa-trash-o.del

    #myModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-body
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            if items
              each item in items
                .offerTable(data-id= item._id.toString())
                  h3= `Offers for ${item.name}`
                  table.table
                    thead
                      tr
                        th Image
                        th Owner
                        th Name
                        th Description
                        th Accept
                        th Reject
                    tbody.itemsTable
                      if item.offers
                        each offer in item.offers
                          tr.item(data-id= offer._id.toString())
                            td.imgUrl
                              img(src= offer.imgUrl)
                            td.owner= offer.owner.username
                            td.name= offer.name
                            td.description= offer.description
                            td
                              button.btn.btn-success.accept Accept
                            td
                              button.btn.btn-danger.reject Reject

    include ./includes/scripts.jade
    script(src='js/home.js')
